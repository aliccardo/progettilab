<% if @sample.errors.blank? %>
  if( $('html').hasClass('is-reveal-open') ) {
    $('#myModal').foundation('close');
  } else {
    $('#sample #form').html("<%= escape_javascript( render 'form' ) %>");
    alert( 'Campione creato!' );
  }
<% else %>
  $('#sample #form').html("<%= escape_javascript( render 'form' ) %>");
<% end %>